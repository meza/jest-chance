{
  "name": "jest-chance",
  "version": "0.1.9",
  "description": "Random seed generator for chancejs with jest",
  "main": "dist/index.js",
  "types": "src/index.d.ts",
  "private": false,
  "repository": "https://github.com/meza/jest-chance",
  "license": "MIT",
  "scripts": {
    "ci": "yarn test && yarn build && codecov",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --fix --ext ts src",
    "test": "yarn lint && yarn lint:types && jest --coverage && yarn build",
    "lint:types": "tsc --noEmit",
    "build": "tsc",
    "release": "standard-version -s && git push --follow-tags --no-verify origin master"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint:fix && yarn test",
      "pre-push": "yarn test",
      "post-merge": "install-deps-postmerge"
    }
  },
  "dependencies": {
    "chance": "^1.0.18"
  },
  "browserslist": [
    "maintained node versions"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/prompt-cli": "^7.5.0",
    "@types/chance": "^1.0.1",
    "@types/jest": "^24.0.9",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "chance": "^1.0.18",
    "codecov": "^3.2.0",
    "commitlint": "^7.5.2",
    "eslint": "^6.5.1",
    "eslint-plugin-jest": "^22.19.0",
    "husky": "^1.3.1",
    "install-deps-postmerge": "^1.0.2",
    "jest": "^24.3.1",
    "jest-express": "^1.10.0",
    "jest-extended": "^0.11.1",
    "standard-version": "^5.0.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.3.3333",
    "yarn": "^1.13.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0
      ],
      "subject-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "re",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/cypress/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  }
}
