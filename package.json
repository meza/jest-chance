{
  "name": "jest-chance",
  "version": "0.1.11",
  "description": "Random seed generator for chancejs with jest",
  "main": "dist/cjs/index.js",
  "module": "dist/es6/index.js",
  "type": "module",
  "typings": "dist/types/index.d.ts",
  "private": false,
  "repository": "https://github.com/meza/jest-chance",
  "license": "MIT",
  "scripts": {
    "ci": "yarn test && yarn build && codecov",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --fix --ext ts src",
    "test": "yarn lint && yarn lint:types && jest --coverage && yarn build",
    "lint:types": "tsc --noEmit",
    "build": "tsc --project ./tsconfig.es6.json && tsc --project ./tsconfig.cjs.json",
    "release": "standard-version -s && git push --follow-tags --no-verify origin master"
  },
  "dependencies": {
    "chance": "^1.0.18"
  },
  "browserslist": [
    "maintained node versions"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.3",
    "@types/chance": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chance": "^1.0.18",
    "codecov": "^3.2.0",
    "commitlint": "^14.1.0",
    "eslint": "^8.1.0",
    "eslint-plugin-jest": "^25.2.3",
    "install-deps-postmerge": "^2.0.1",
    "jest": "^27.3.1",
    "jest-express": "^1.10.0",
    "jest-extended": "^1.1.0",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typescript": "^4.4.4",
    "yarn": "^1.13.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0
      ],
      "subject-case": [
        0
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "re",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/cypress/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  }
}
