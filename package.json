{
  "name": "jest-chance",
  "version": "develoment",
  "description": "Random seed generator for chancejs with jest",
  "main": "dist/cjs/index.js",
  "module": "dist/es6/index.js",
  "type": "module",
  "typings": "dist/types/index.d.ts",
  "private": false,
  "repository": "https://github.com/meza/jest-chance",
  "license": "MIT",
  "scripts": {
    "clean:githooks": "lefthook uninstall -k",
    "ci": "pnpm test && pnpm build",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --fix --ext ts src",
    "test": "pnpm lint && pnpm lint:types && jest --coverage && pnpm build",
    "lint:types": "tsc --noEmit",
    "build": "tsc --project ./tsconfig.es6.json && tsc --project ./tsconfig.cjs.json",
    "semantic-release": "semantic-release",
    "release": "semantic-release"
  },
  "dependencies": {
    "chance": "^1.1.9"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^14.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@types/chance": "^1.1.3",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "commitlint": "^14.1.0",
    "eslint": "^8.26.0",
    "eslint-config-tailored-tunes": "^5.0.2",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-security": "^1.5.0",
    "install-deps-postmerge": "^2.0.1",
    "jest": "^27.5.1",
    "jest-express": "^1.12.0",
    "jest-extended": "^1.2.1",
    "jest-junit": "^14.0.1",
    "lefthook": "^1.1.3",
    "pnpm": "^7.14.0",
    "semantic-release": "^19.0.5",
    "ts-jest": "^27.1.5",
    "typescript": "^4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/cypress/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "coverageDirectory": "reports/coverage",
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "junit.xml"
  },
  "engines": {
    "node": ">=19.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
