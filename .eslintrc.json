{
  "extends": [
    "tailored-tunes",
    "plugin:json/recommended",
    "plugin:security/recommended"
  ],
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "json",
    "@typescript-eslint"
  ],
  "rules": {
    "no-else-return": "off",
    "no-unused-expressions": "off",
    "max-nested-callbacks": ["error", 4]
  },
  "env": {
    "commonjs": false,
    "es6": true,
    "node": true
  },
  "ignorePatterns": [
    "**/*.d.ts"
  ]
}
